	<title>ex-05-05</title>
</head>

<body>
	<script>
		function sum(a, b) {

			var rank = 0;
			var result = "";
			a = a.split("");
			b = b.split("");

			while (a.length > 0 || b.length > 0 || rank) {

				var aNum = parseInt(a.pop() || 0, 10);
				var bNum = parseInt(b.pop() || 0, 10);
				var middleRes = aNum + bNum + parseInt(rank, 10);

				rank = (middleRes > 9) ? 1 : 0;
				result = middleRes % 10 + result;
			}

			return result;
		}

		alert(sum("18", "3"));
	</script>
</body>
